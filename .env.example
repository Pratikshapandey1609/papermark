NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Force email sending even in development mode
SEND_EMAILS=true

NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_MARKETING_URL=http://localhost:3000

# PostgreSQL Database
POSTGRES_PRISMA_URL=postgresql://username:password@localhost:5432/papermark
POSTGRES_PRISMA_URL_NON_POOLING=postgresql://username:password@localhost:5432/papermark

# Vercel Blob Storage (Required for file uploads)
# Get your token from: https://vercel.com/dashboard/stores
BLOB_READ_WRITE_TOKEN=your_blob_token_here

# Google OAuth (Optional)
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Authorized redirect URI: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth (Optional)
# Get credentials from: https://github.com/settings/developers
# Authorized redirect URI: http://localhost:3000/api/auth/callback/github
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Firebase Configuration (Optional)
# Get credentials from: https://console.firebase.google.com/
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Resend (Optional - for emails)
RESEND_API_KEY=

# SMTP Configuration (Alternative to Resend)
# For Gmail: Use App Password from https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=your_email@gmail.com

# Tinybird (Optional - for analytics)
TINYBIRD_TOKEN=

# Vercel (Optional - for custom domains)
PROJECT_ID_VERCEL=
TEAM_ID_VERCEL=
AUTH_BEARER_TOKEN=

# Upstash QStash (Optional - for background jobs)
QSTASH_TOKEN=
QSTASH_CURRENT_SIGNING_KEY=
QSTASH_NEXT_SIGNING_KEY=

# Hanko (Optional - for passkey authentication)
HANKO_API_KEY=
NEXT_PUBLIC_HANKO_TENANT_ID=

# Trigger.dev (Optional - for background jobs like PDF conversion)
TRIGGER_API_KEY=
TRIGGER_API_URL=https://api.trigger.dev
NEXT_PUBLIC_TRIGGER_PUBLIC_API_KEY=
TRIGGER_SECRET_KEY=

# Storage Configuration
NEXT_PUBLIC_UPLOAD_TRANSPORT="vercel"
NEXT_PRIVATE_UPLOAD_DISTRIBUTION_HOST=""
NEXT_PRIVATE_UPLOAD_ENDPOINT=""
NEXT_PRIVATE_UPLOAD_REGION="us-east-1"
NEXT_PRIVATE_UPLOAD_BUCKET=""
NEXT_PRIVATE_UPLOAD_ACCESS_KEY_ID=""
NEXT_PRIVATE_UPLOAD_SECRET_ACCESS_KEY=""
NEXT_PRIVATE_UPLOAD_DISTRIBUTION_DOMAIN=""
NEXT_PRIVATE_UPLOAD_DISTRIBUTION_KEY_ID=""
NEXT_PRIVATE_UPLOAD_DISTRIBUTION_KEY_CONTENTS=

# Document Password Encryption
NEXT_PRIVATE_DOCUMENT_PASSWORD_KEY=your-document-secret-key

# Redis Locker (Optional - for bulk uploads)
UPSTASH_REDIS_REST_LOCKER_URL=
UPSTASH_REDIS_REST_LOCKER_TOKEN=

# Verification Secret
NEXT_PRIVATE_VERIFICATION_SECRET=your-verification-secret-key

# Incoming Webhooks (Optional)
NEXT_PUBLIC_WEBHOOK_BASE_URL=
NEXT_PUBLIC_WEBHOOK_BASE_HOST=
